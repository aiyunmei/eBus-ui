@import "./const.styl";

.skeleton
  width 100%
  height 100%
  position relative
  background #ffffff

.skeleton-header
  background gray-color

.skeleton-header
  width 100%
  margin 0 auto
  height 14rem
.skeleton-body
  width 92%
  margin 20px auto
  .un
    width 100%
    height 40px
    margin 10px 0
    background gray-color
  .item
    width 25%
    height 80px
    display inline-block
    background transparent
    padding 6px
    span
      background gray-color
      display block
      width 100%
      height 100%
      border-radius 4px
.skeleton-footer
  width 100%
  height 66px
  display flex
  align-items center
  position absolute
  left 0
  bottom 0
  .item
    width 92%
    margin 0 auto
    height 42px
    background gray-color
    border-radius 6px


