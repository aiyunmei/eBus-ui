@import "./const.styl";

.open-line-search
  width 100%
  height 42px
  display flex
  flex-direction row
  justify-content flex-start
  align-items center
  position fixed
  left 0
  top 0
  .item
    height 100%
    overflow hidden
    font-size small_font_size
  .l
    width 25%
    height 100%
    line-height 42px
    background #ccc
    color #fff
    text-align center
  .r
    width 75%
    box-sizing border-box
    padding 4px
    border 1px solid #ccc
/* 列表 */
.open-line-body
  width 100%
  padding-top 42px
  .list
    width 100%
    li
      width 100%
      border-bottom 1px solid #ccc
      overflow hidden
      padding 10px
      .item
        width 100%
      .name
        font-weight 700
        font-size normal_font_size
        padding-bottom 0.4rem
      .station
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        .station-info
          font-size small_font_size
        .station-more
          font-size small_font_size
/* null */
.open-line-null
  width 100%
  padding-top 10px
  img
    width 60%
    margin 0 auto
    display block
  .tips
    width 100%
    text-align center
    color #999
    padding 10px 0
    font-size small_font_size
