@import "./const.styl";

.line-info
  height 100%
  overflow hidden
/* 无 */
.line-info-null
  width 100%
  height 100%
  overflow hidden
  text-align center
  img
    width 100%
  .line-info-null-wrapper
    position fixed
    z-index 10
    left 50%
    top 40%
    transform: translate(-50%, -50%) scale(1)
    .line-info-null-tips
      font-size 14px
/* 线路 */
.line-info-wrapper
  width 100%
  height 100%
  overflow hidden
  display flex
  flex-direction column
  justify-content space-between
/* 头 */
.line-info-wrapper-header
  width 100%
  background #fff
  height 10vh
  display flex
  flex-direction column
  justify-content center
  padding 0 20px
  .header-title
    font-size normal_font_size
  .header-footer
    font-size small_font_size
/* 尾部 */
.line-info-wrapper-footer
  width 100%
  background #fff
  height 6vh
  display flex
  flex-direction row
  justify-content center
  align-items center
  .line-info-wrapper-footer-list
    height 100%
    display flex
    flex-direction row
    align-items center
    justify-content center
    .footer-icon
      width 15px
      height 15px
    .footer-label
      padding-left 10px
/* 中部列表 */
.line-info-wrapper-body
  width 100%
  height 84vh
  background #ccc
  position relative
  .line-info-wrapper-body-info
    width 100%
    height 96%
    position absolute
    left 50%
    top 10px
    transform translate(-50%, 0) scale(1)
    overflow-x hidden
    overflow-y auto
    z-index 10
    .point-line
      position absolute
      left 5.6%
      top 23px
      width 2px
      background #9FD2F6
.list-info
  width 100%
  .line-list-wrapper
    background #ffffff
    height 36px
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    .left
      width 12%
      height 100%
      display flex
      justify-content center
      align-items center
      position relative
    .right
      width 88%
      height 100%
      line-height 36px
      border-bottom 1px solid #e0e0e0
/* 点 */
.icon
  border-radius 50%
.point-item
  width 10px
  height 10px
  background #9FD2F6
.point-start, .point-end
  width 14px
  height 14px
.point-start
  border: 2px solid #88C45D
.point-end
  border 2px solid #DF4E4E
/* 线 */
.un-line-item
  width 2px
  height 100%
  background #9FD2F6
  position absolute
  top 0
  left 50%
  margin-left -1px
.un-line-start, .un-line-end
  width 2px
  height 30%
  background #9FD2F6
  position absolute
  left 50%
  margin-left -1px
.un-line-start
  bottom 0
.un-line-end
  top 0



