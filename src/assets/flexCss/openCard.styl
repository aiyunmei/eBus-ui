@import "./const.styl";

.open-card
  height 100%
  overflow hidden
  position relative
  .open-card-bg
    width 100%
    position absolute
    left 0
    top 0
    z-index 5
  .body
    width 100%
    height 100%
    z-index 10
    position absolute
    left 0
    top 0
    .body-info
      width 100%
      height 100%
      padding: 30% 0 20px 0
/* 卡 */
.card
  width 92%
  margin 0 auto
/* 协议 */
.open-card-protocol
  width 92%
  margin 0 auto
  position relative
  padding-top 36px
  .open-card-protocol-text
    display inline-block
    font-size small_font_size
    .check-icon
      font-size normal_font_size
      color default_black
    .check-active
      color default_blue
    .protocol-link
      color #3ab5e6
  .open-card-item-tip
    position absolute
    top 0
    left 0
    font-size mini_font_size
/* 领卡按钮 */
.open-card-btn
  width 92%
  margin 6px auto
/* 卡描述 */
.desc-info
  width 100%
  padding 4% 0
  display flex
  flex-direction column
  justify-content space-around
  align-items center
  .open-card-desc
    width 92%
    margin 0 auto
    padding-bottom 6px
    text-align center
    .header
      font-size normal_font_size
      font-weight 500
      color default_black
      padding-bottom 4px
      em
        color #999
    .footer
      font-size mini_font_size
      color #a1a1a1
/* 底部 */
.open-card-footer
  color #a1a1a1
  font-size mini_font_size
  position absolute
  z-index 15
  left 0
  bottom 4px
  width 100%
  text-align center
