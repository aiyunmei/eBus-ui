@import './const.styl'

.recharge-header
  width 92%
  height 4.6rem
  margin 0.5rem auto
  background no-repeat
  background-size 100% 100%
  display flex
  flex-direction column
  justify-content space-around
  .item
    font-size large_font_size
    margin-left 5%
  .cardNo
    width 70%
    overflow hidden
    color #fff
  .tips
    width 3rem
    font-size normal_font_size
.recharge-item
  font-size large_font_size
  width 92%
  margin 0.6rem auto
.recharge-list
  width 92%
  margin 0 auto
  .item
    width 32%
    height 3.2rem
    display inline-block
    position relative
    margin-bottom 0.8rem
    .item-main
      width 100%
      height 100%
      border 2px solid #108ee9
      border-radius 0.1rem
      overflow hidden
      display flex
      flex-direction column
      justify-content space-around
      text-align center
      .label
        font-size large_font_size
        color #108ee9
      .value
        font-size normal_font_size
        color #82cbfe
      .tips
        width 2.5rem
        height 1rem
        line-height 1.6
        overflow hidden
        text-align center
        display block
        position absolute
        right -0.11rem
        top -0.45rem
        color #fff
        font-size small_font_size
        background-size 100% 100%
    .on
       background #108ee9
       .label, .value
         color #fff
  .item:nth-child(3n-1)
    margin 0 2%
.recharge-footer
  width 100%
  position fixed
  left 0
  bottom 0
  text-align center
  .item
    width 100%
    margin 0.2rem 0
    font-size normal_font_size
    em
      color #ddd
      font-weight 700
  .check
    i
      color #108ee9
    span
      color #ddd
.recharge-protocol
  width 100%
  position fixed
  background #ffffff
  left 0
  right 0
  top 0
  bottom 0
  z-index 2000
  transition: .3s;
  font-size small_font_size
  line-height 2
  .main
    width 80%
    position fixed
    z-index 2001
    left 50%
    top 50%
    transform translate(-50%,-50%)
    background #459eff
    padding 0.4rem 0.2rem
    border-radius 0.2rem
  .content
    width 100%
    color #ffffff
  .submit
    width 6rem
    margin 0 auto
    padding-top 0.4rem
    .btn
      border-radius 1rem
.recharge-protocol-enter
  opacity: 0
  transform: scale(0.7)
.recharge-protocol-leave-active
  opacity: 0
  transform: scale(0.9)


