.recharge-header
  width 92%
  height 3rem
  margin 0.3rem auto
  background no-repeat
  background-size 100% 100%
  display flex
  flex-direction column
  justify-content space-around
  .item
    font-size 0.44rem
    margin-left 5%
  .cardNo
    width 70%
    overflow hidden
    color #fff
  .tips
    width 2rem
    font-size 0.4rem
.recharge-item
  font-size 0.5rem
  width 92%
  margin 0 auto
.recharge-list
  width 92%
  margin 0 auto
  padding-top 0.3rem
  .item
    width 32%
    height 2.4rem
    display inline-block
    position relative
    margin-bottom 0.3rem
    .item-main
      width 100%
      height 100%
      border 2px solid #108ee9
      border-radius 0.1rem
      display flex
      flex-direction column
      justify-content space-around
      text-align center
      .label
        font-size 0.5rem
        color #108ee9
      .value
        font-size 0.4rem
        color #82cbfe
      .tips
        height 0.66rem
        line-height 1.8
        overflow hidden
        text-align center
        display block
        position absolute
        right -0.08rem
        top -0.25rem
        color #fff
        font-size 0.32rem
        background-size 100% 100%
    .on
       background #108ee9
       .label, .value
         color #fff
  .item:nth-child(3n-1)
    margin 0 2%
.recharge-footer
  width 100%
  position fixed
  left 0
  bottom 0
  text-align center
  .item
    width 100%
    margin 0.2rem 0
    em
      color #ddd
      font-weight 700
  .check
    i
      color #108ee9
    span
      color #ddd
