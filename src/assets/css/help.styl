@import './const.styl';

.help-list
  .help-list-item
    width 100%
    overflow hidden
    padding 2%
    border-bottom 1px solid #ccc
    .question
      color #333333
      font-weight 700
      font-size large_font_size
      position relative
      padding-right 0.66rem
      .arrow
        font-size large_font_size
        position absolute
        top 0
        right 0
        width 0.66rem
        transition all .3s
    .answer
      color #666
      font-size normal_font_size
      padding-top 0.3rem
  .open
    .arrow
      transform rotate(180deg)

