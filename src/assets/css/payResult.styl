@import './const.styl'

.pay-result-bg
  width 100%
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  background rgba(96, 96, 96, 0.1)
  z-index -1
.pay-result-main
  width 100%
  background #fff
  padding-top 1rem
  .logo
    width 3rem
    height 3rem
    margin 0 auto
    img
      width 100%
      height 100%
  .content
    width 100%
    text-align center
    h3
      color #2c83e8
      font-size large_font_size
      font-weight 300
      padding 0.4rem 0
    .amount
      color #333
      font-size large_font_size
      padding-bottom 0.2rem
    .tips
      color #aaa
      font-size small_font_size
      padding-bottom 0.2rem
      border-bottom 1px solid #ddd
  .footer
    width 100%
    padding 0.2rem 0
    .main
      width 92%
      margin 0 auto
      display flex
      flex-direction row
      justify-content space-between
      align-items center
      .l
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        h3
          font-weight 300
          font-size normal_font_size
          span
            font-size small_font_size
            color #aaa
        .money
          width 1rem
          height 1rem
          line-height 1rem
          text-align center
          border 1px solid #2c83e8
          color #2c83e8
          font-size large_font_size
          border-radius 100%
          margin-right 0.4rem
      .r
        display flex
        flex-direction row
        justify-content center
        align-items center
        .btn
          width 3rem
          font-size normal_font_size
        .arrow
          color #aaaaaa
          font-size 1rem
          margin-left 0.2rem
.return
  width 92%
  margin 0 auto
  position fixed
  left 50%
  bottom: 0
  margin-left -46%
  padding 0.4rem 0
