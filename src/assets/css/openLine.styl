@import './const.styl'

.open-line-search
  width 100%
  height 1.6rem
  display flex
  flex-direction row
  justify-content flex-start
  align-items center
  position fixed
  left 0
  top 0
  .item
    height 100%
    overflow hidden
    font-size normal_font_size
  .l
    width 25%
    background #ccc
    color #fff
    line-height 1.6rem
    text-align center
  .r
    width 75%
    box-sizing border-box
    padding 0.1rem
    border 1px solid #ccc
.open-line-body
  width 100%
  padding-top 1.6rem
  .list
    width 100%
    li
      width 100%
      border-bottom 1px solid #ccc
      overflow hidden
      padding 0.4rem 0 0.4rem 0.4rem
      .item
        width 100%
      .name
        font-weight 700
        font-size large_font_size
        padding-bottom 0.4rem
      .station
        font-size normal_font_size
.open-line-null
  width 100%
  padding-top 1.6rem
  img
    width 60%
    margin 0 auto
    display block
  .tips
    width 100%
    text-align center
    color #999
    padding 0.1rem 0
    font-size normal_font_size
