.open-line-search
  width 100%
  height 1rem
  display flex
  flex-direction row
  justify-content flex-start
  align-items center
  position fixed
  left 0
  top 0
  .item
    height 1rem
    overflow hidden
  .l
     width 25%
     background #ccc
     color #fff
     font-size 0.42rem
     line-height 1rem
     text-align center
  .r
     width 75%
     .input
       width 100%
       height 100%
       border 2px solid #ccc
       display inline-block
       box-sizing border-box
       font-size 0.42rem
       padding 0.1rem
.open-line-body
  width 100%
  padding-top 1rem
  .list
    width 100%
    li
      width 100%
      border-bottom 2px solid #ccc
      overflow hidden
      padding 0.2rem
      .item
        width 100%
      .name
        font-weight 700
        font-size 0.46rem
        padding-bottom 0.2rem
      .station
        font-size 0.4rem
.open-line-null
  width 100%
  padding-top 1rem
  img
    width 6rem
    height 4rem
    margin 0 auto
    display block
  .tips
    width 100%
    text-align center
    color #999
    padding 0.2rem 0
    font-size 0.42rem
