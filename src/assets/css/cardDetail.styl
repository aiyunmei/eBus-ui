@import './const.styl'

.card-detail
  /* 公告 */
  .card-detail-notice
    width 100%
    position fixed
    left 0
    top 0
    height 1rem
    z-index 5
  /* 卡 */
  .card-detail-card-img
    width 100%
    margin 0 auto
    position relative
    padding 1.2rem 0.6rem
    .wave
      width 100%
      position absolute
      left 0
      bottom -0.8rem
  .body
    width 100%
    /* 波浪 */
    /* 卡号 */
    .card-detail-card-no
      width 92%
      margin 0 auto
      position relative
      padding 0.1rem 0
      border-bottom 1px solid #e0e0e0
      display flex
      flex-direction row
      justify-content flex-start
      align-items center
      font-size large_font_size
      .icon
        width 1rem
        height 1rem
        margin-right 0.2rem
    /* 菜单 */
    .card-detail-menu
      width 92%
      margin 0.2rem auto
      .menu-item
        width 25%
        display inline-block
        text-align center
        font-size normal_font_size
        color #666
        padding 0.2rem 0
        .icon
          width 100%
          text-align center
          img
            width 1.4rem
            height 1.4rem
        .info
          width 100%
          height 100%
          display flex
          flex-direction column
          justify-content space-between
  /* footer */
  .footer
    width 100%
    position fixed
    left 0
    bottom 0
    .card-detail-banner
      width 100%
      padding-bottom 0.3rem
      img
        width 92%
        height 4rem
        margin 0 auto
        display block
        border-radius 0.1rem
    /* 底部按钮 */
    .card-detail-btn
      width 100%
      height 2.4rem
      display flex
      flex-direction row
      justify-content center
      align-items center
      border-top 1px solid #e0e0e0
      .info
        width 92%
        margin 0 auto
  /* 领卡成功弹窗 */
  .card-detail-success
    width 100%
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    z-index 1000
    background rgba(0, 0, 0, 0.7)
    .main
      position fixed
      left 50%
      top 15%
      width 80%
      margin-left -40%
      img
        width 100%
      .btn-list
        width 100%
        position relative
        top -0.35rem
        .btn
          width 50%
          display inline-block
          text-align center
          background #fff
          height 2rem
          line-height 2rem
          font-size large_font_size
        .l
           border-bottom-left-radius 0.2rem
        .r
           border-bottom-right-radius 0.2rem
           color #0e80d2
           border-left 1px solid #ddd
