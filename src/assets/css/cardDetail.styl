.card-detail
  padding-bottom 1.6rem
  .card-detail-bg
    width 100%
    height 5rem
    position absolute
    left 0
    top 0
    z-index -1
  .card-detail-card-img
    width 92%
    margin 0 auto
    padding-top 1rem
  .card-detail-banner
    width 100%
    img
      width 92%
      height 2.6rem
      border-radius 0.1rem
      display block
      margin 0 auto
  .card-detail-menu
    width 92%
    margin 0.2rem auto
    border-top 1px solid #ddd
    .menu-item:active
      background rgba(96, 96, 96, 0.1)
    .menu-item
      width 100%
      height 1rem
      position relative
      display flex
      flex-direction row
      justify-content space-between
      align-items center
      font-size 0.4rem
      border-bottom 1px solid #ddd
      .label
        color #333
      .value
        color #a1a1a1
      .arrow
        color #a1a1a1
        font-size 0.7rem
      .tips
        position absolute
        right 0.4rem
        height 0.8rem
        top 50%
        margin-top -0.4rem
  .card-detail-btn
    width 92%
    position fixed
    z-index 5
    left 50%
    bottom 0
    margin-left -46%
    padding 0.4rem 0
  .card-detail-success
    width 100%
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    z-index 1000
    background rgba(0, 0, 0, 0.7)
    .main
      position fixed
      left 50%
      top 15%
      width 80%
      margin-left -40%
      img
        width 100%
        height 6.5rem
      .btn-list
        width 100%
        position relative
        top -0.125rem
        .btn
          width 50%
          display inline-block
          text-align center
          background #fff
          height 1.2rem
          line-height 1.2rem
          font-size 0.45rem
        .l
           border-bottom-left-radius 0.2rem
        .r
           border-bottom-right-radius 0.2rem
           color #0e80d2
           border-left 2px solid #ddd
