.card-detail
  /* 卡 */
  .card-detail-card-img
    width 100%
    margin 0 auto
    padding 0.8rem 0.6rem 1.2rem 0.6rem
    position relative
    .wave
      width 100%
      height 2rem
      position absolute
      left 0
      bottom 0
  .card-detail-card-no
    width 92%
    margin 0 auto
    padding-bottom 0.2rem
    border-bottom 1px solid #e0e0e0
    font-size 0.46rem
    .icon
      color #0e80d2
  /* 菜单 */
  .card-detail-menu
    width 92%
    margin 0.2rem auto
    .menu-item
      width 25%
      height 1.8rem
      display inline-block
      text-align center
      font-size 0.4rem
      color #666
      padding 0.2rem 0
      .icon
        width 100%
        text-align center
        img
          width 0.8rem
          height 0.8rem
      .info
        width 100%
        height 100%
        display flex
        flex-direction column
        justify-content space-between
  /* banner */
  .card-detail-banner
    width 100%
    position fixed
    left 0
    bottom 2rem
    z-index 5
    img
      width 92%
      height 2.6rem
      margin 0 auto
      display block
      border-radius 0.1rem
  /* 底部按钮 */
  .card-detail-btn
    width 100%
    height 1.6rem
    line-height 1.6rem
    position fixed
    z-index 5
    bottom 0
    border-top 1px solid #e0e0e0
    .info
      width 92%
      margin 0 auto
  /* 领卡成功弹窗 */
  .card-detail-success
    width 100%
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    z-index 1000
    background rgba(0, 0, 0, 0.7)
    .main
      position fixed
      left 50%
      top 15%
      width 80%
      margin-left -40%
      img
        width 100%
        height 6.5rem
      .btn-list
        width 100%
        position relative
        top -0.125rem
        .btn
          width 50%
          display inline-block
          text-align center
          background #fff
          height 1.2rem
          line-height 1.2rem
          font-size 0.45rem
        .l
           border-bottom-left-radius 0.2rem
        .r
           border-bottom-right-radius 0.2rem
           color #0e80d2
           border-left 2px solid #ddd
