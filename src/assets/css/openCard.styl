@import './const.styl'

.open-card
  height 100%
  overflow hidden
  position relative

.open-card-bg
  width 100%
  position absolute
  left 0
  top 0
  z-index 5

.open-card-wrapper
  width 100%
  height 100%
  position absolute
  left 0
  top 0
  z-index 10
  .open-card-wrapper-info
    width 100%
    height 100%
    .open-card-img
      width 92%;
      margin 0 auto
      padding-top 4.6rem
    .open-card-item
      width 92%
      margin 0 auto
      padding: 1.6rem 0 0.3rem 0
      font-size normal_font_size
      position relative
      .open-card-item-tip
        position absolute
        left 0
        top 0
      .check-icon
        font-size 0.76rem
        padding-left 0.2rem
      .check-active
        color #108ee9
      em
        color #3ab5e6
    .open-card-btn
      width 92%
      margin 0 auto
      padding-bottom 1.4rem
    .desc-info
      width 100%
      display flex
      flex-direction column
      justify-content space-between
      align-items center
      .open-card-desc
        width 100%
        text-align center
        padding-bottom 0.6rem
        .header
          font-size large_font_size
          em
            color #c1c1c1
          span
            color #333
            font-weight 700
        .footer
          font-size normal_font_size
          color #a3a8ae
          padding-top 0.3rem

.open-card-footer
  width 100%
  text-align center
  position absolute
  left 0
  bottom 0.1rem
  z-index 10
  font-size mini_font_size
  color #eaeaea
