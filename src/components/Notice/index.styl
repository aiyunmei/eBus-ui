@import '../../assets/css/const.styl'

.notice-bar
  width 100%
  height 100%
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  background #FFFBF1
  .icon
    width 5%
    height 100%
    display flex
    flex-direction row
    justify-content center
    align-items center
  .left
    img
      width 0.6rem
  .right
    img
      width 0.46rem
  .info
    width 90%
    height 100%
    position relative
    overflow hidden
    font-size normal_font_size
    color #FE6D12
    .info-main
      height 100%
      white-space nowrap
      position absolute
      display flex
      flex-direction row
      justify-content flex-start
      align-items center
      left 0
      top 0
      animation horse 8s linear infinite
/*动画*/
@keyframes horse
  to
    transform translate3d(120%, 0, 0)
