.notice-bar
  width 100%
  position fixed
  z-index 10
  left 0
  top 0
  height 0.8rem
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  background #FFFBF1
  .icon
    width 7%
    height 100%
    display flex
    flex-direction row
    justify-content center
    align-items center
  .left
    img
      width 0.4rem
  .right
    img
      width 0.3rem
  .info
    width 86%
    height 100%
    position relative
    overflow hidden
    font-size 0.4rem
    color #FE6D12
    .info-main
      height 100%
      white-space nowrap
      position absolute
      display flex
      flex-direction row
      justify-content flex-start
      align-items center
      left 0
      top 0
      line-height 0.8rem
      animation horse 8s linear infinite
/*动画*/
@keyframes horse
  to
    transform translate3d(120%, 0, 0)
